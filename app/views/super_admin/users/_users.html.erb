<div class="col-lg-8">
    <div class="main-content">
        <!-- Page title -->
        <div class="page-title">
            <div class="row align-items-center">
                <div class="col-lg-6 col-12">
                    <h2 class="heading heading-5 text-capitalize strong-500 mb-0">
                        <a href="#" class="link text-underline--none">
                            <i class="fa fa-chevron-down"></i> Users
                        </a>
                    </h2>
                </div>
                <div class="col-lg-6 col-12">

                </div>
            </div>
        </div>

        <div class="link-menu link-menu--style-3 py-4 border-bottom">
            <%= link_to 'Create', new_super_admin_user_path, class: "active" %>
        </div>

        <!-- Order history table -->
        <div class="card no-border">
            <div>
                <table class="table table-sm table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th colspan="3">Action</th>
                        </tr>
                    </thead>

                    <tbody>
                    	<% @users.each do |user| %>
							<% unless user.is_super_admin %>
                                <tr>
                                    <td>
                                      <%= user.f_name %> <%= user.l_name %>
                                    </td>
                                    <td><%= user.email %></td>
                                    <td>
                                      <%= link_to 'Show', super_admin_user_path(user), class: "btn btn-primary" %>
                                    </td>
                                    <td>
                                      <%= link_to 'Edit', edit_super_admin_user_path(user), class: "btn btn-warning" %>
                                    </td>
                                    <td>
                                      <%= link_to 'Delete', super_admin_user_path(user), method: :delete, class: "btn btn-danger" %>
                                    </td>
                                </tr>
    					 	<% end %>
    					<% end %>

                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>
