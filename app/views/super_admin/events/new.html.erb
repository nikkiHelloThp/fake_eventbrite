<h1>SuperAdmin</h1>
<p>Create a new event...</p>

<%= form_with(url: super_admin_events_path, method: 'post') do %>

	<%= label_tag("start date:") %>
	<%= datetime_local_field(:event, :start_date) %>

	<%= label_tag("duration:") %>
	<%= number_field(:event, :duration, step: 5) %>

	<%= label_tag("title:") %>
	<%= text_field_tag(:title) %>


	<%= label_tag("description:") %>
	<%= text_area_tag(:description) %>

	<%= label_tag("price:") %>
	<%= number_field(:event, :price) %>

	<%= label_tag("location:") %>
	<%= text_field_tag(:location) %>
	
	<%= submit_tag("Create") %>
<% end %>
