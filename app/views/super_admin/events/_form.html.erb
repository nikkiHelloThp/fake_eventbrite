<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
			<%= form_with model: [:super_admin, @event], class: "form-signin mt-3" do |f| %>
			<h1 class="h3 mb-3 font-weight-normal text-center"><%= params[:action].upcase %> EVENT</h1>
				<div class="form-group">
					<%= f.label("start date:") %>
					<%= f.datetime_local_field(:start_date, class: "form-control") %>
				</div>
				<div class="form-group">
					<%= f.label("duration:") %>
					<%= f.number_field(:duration, step: 5, class: "form-control") %>
				</div>
				<div class="form-group">
					<%= f.label("title:") %>
					<%= f.text_field(:title, class: "form-control") %>
				</div>

				<div class="form-group">
					<%= f.label("description:") %>
					<%= f.text_area(:description, class: "form-control") %>
				</div>
				<div class="form-group">
					<%= f.label("price:") %>
					<%= f.number_field(:price, class: "form-control") %>
				</div>
				<div class="form-group">
					<%= f.label("location:") %>
					<%= f.select(:location, options_for_select(Event.all.collect{ |e| e.location }), {}, {class: "form-control"}) %>
				</div>
				<div class="actions mt-5 mb-3">
					<%= f.submit "Save", class: "btn btn-lg btn-primary btn-block" %>
				</div>
			<% end %>
    </div>
  </div>
	<%= link_to "Back", :back %>
</div>
