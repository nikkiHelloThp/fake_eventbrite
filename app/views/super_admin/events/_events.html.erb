<div class="col-lg-8">
    <div class="main-content">
        <div class="page-title">
            <div class="row align-items-center">
                <div class="col-lg-6 col-12">
                    <h2 class="heading heading-5 text-capitalize strong-500 mb-0">
                        <a href="#" class="link text-underline--none">
                            <i class="fa fa-chevron-down"></i> Events
                        </a>
                    </h2>
                </div>
                <div class="col-lg-6 col-12">

                </div>
            </div>
        </div>

        <div class="link-menu link-menu--style-3 py-4 border-bottom">
            <%= link_to 'Create', new_super_admin_event_path, class: "active" %>
        </div>

        <div class="card no-border">
            <div>
                <table class="table table-sm table-hover">
                    <thead>
                        <tr>
                            <th>Titre</th>
                            <th>Date de debut</th>
                            <th colspan="3">Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                    	<% @events.each do |event| %>
                          <tr>
                            <td>
							 <%= event.title %>
                            </td>
                            <td><%= event.start_date %></td>
                            <td>
                              <%= link_to 'Show', super_admin_event_path(event), class: "btn btn-primary" %>
                            </td>
                            <td>
                              <%= link_to 'Edit', edit_super_admin_event_path(event), class: "btn btn-warning" %>
                            </td>
                            <td>
                              <%= link_to 'Delete', super_admin_event_path(event), method: :delete, class: "btn btn-danger" %>
                            </td>
                          </tr>
				    	<% end %>

                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>
