<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
			<%= form_with model: @user, class: "form-signin mt-3" do |f| %>
			<h1 class="h3 mb-3 font-weight-normal text-center"><%= params[:action].upcase %> USER</h1>
				<div class="form-group">
					<%= f.label("Prenom:") %>
					<%= f.text_field(:f_name, class: "form-control") %>
				</div>
				<div class="form-group">
					<%= f.label("Nom:") %>
					<%= f.text_field(:l_name, class: "form-control") %>
				</div>
				<div class="form-group">
					<%= f.label("description:") %>
					<%= f.text_area(:description, class: "form-control") %>
				</div>
				<div class="actions mt-5 mb-3">
					<%= f.submit "Save", class: "btn btn-lg btn-primary btn-block" %>
				</div>
			<% end %>
    </div>
  </div>
	<%= link_to "Back", :back %>
</div>