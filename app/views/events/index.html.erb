<%= render "layouts/banner" %>

<section class="slice sct-color-1">
    <div class="container container-sm">
        <div class="row masonry">
          <% @events.each do |event| %>
						<div class="masonry-item col-md-6 design" id="events">
						    <div class="block block--style-3">
						        <div class="block-image relative">
						            <div class="view view-first">
						              <%= link_to event_path(event) do %>
						                <% if event.photo.attached? %>
						                    <%= image_tag event.photo, alt: 'photo' %>
						                    <span class="block-date-over"><%= event.parsed_date %></span>
						                <% else %>
						                    <span class="c-base-1">Pas de photo pour l'instant</span>
						                <% end %>  
						              <% end %>
						            </div>
						        </div>
						        <div class="block-body">
						            <h3 class="heading heading-5 strong-500">
						                <a href="#"><strong class=" eventbrite-color"><%= event.title %></strong></a>
						            </h3>
						            <p>
						              <%= event.description.truncate(120) %>
						            </p>
						        </div>
						        <div class="block-footer border-top">
						            <div class="row align-items-center">
						                <div class="col-6">
						                    <div class="block-author">
						                        <div class="author-image author-image-xs">
						                            <% if event.admin.avatar.attached? %>
						                                <%= image_tag event.admin.avatar %>
						                            <% end %>
						                        </div>
						                        <div class="author-info">
						                            <div class="author-name">
						                                <a href="#" class="text-md strong-600"><%= event.username_from_email %></a>
						                            </div>
						                        </div>
						                    </div>
						                </div>
						                <div class="col-6 text-right">
						                  <%= link_to '<i class="fa fa-long-arrow-right"></i> Read more'.html_safe, event_path(event), class: "link link-sm link--style-2" %>
						                </div>
						            </div>
						        </div>
						    </div>
						</div>
          <% end %>
        </div>
    </div>
</section>
