<main role="main">

  <!-- Main jumbotron for a primary marketing message or call to action -->
  <div class="jumbotron">
    <div class="container">
      <h1 class="display-3">Hello, world!</h1>
      <p>This app provides the CRUD, Authentication, dashboard admin, etc..</p>
    </div>
  </div>

  <div class="container">
    <!-- Example row of columns -->
    <div class="row">
      <% @events.each do |event| %>
        <div class="col-md-4">
          <h2><%= event.title %></h2>
          <p><%= event.description %></p>
          <p>quand: <%= event.start_date %></p>
          <p><%= event.duration %> minutes</p>
          <p><%= event.price %> euros</p>
          <p>o√π?: <%= event.location %></p>
            <%= link_to 'View details &raquo;'.html_safe, event_path(event.id), class: "btn btn-primary btn-lg" %>
