<%= form_for @event do |f| %>
	<%= f.label("title:") %>
	<%= f.text_field(:title) %>
	<%= f.label("description:") %>
	<%= f.text_area(:description, placeholder: '20 caractÃ¨res minimum') %>
	<%= f.label("start date:") %>
	<%= f.datetime_local_field(:start_date) %>
	<%= f.label("duration:") %>
	<%= f.number_field(:duration, step: 5) %>
	<%= f.label("price:") %>
	<%= f.number_field(:price) %>
	<%= f.label("Location") %>
	<%= f.select(:location, options_for_select(Event.all.collect{ |e| e.location })) %>
	<%= f.submit %>
<% end %>
