<%= form_with(url: events_path, method: 'post') do %>
	<%= label_tag("title:") %>
	<%= text_field_tag(:title) %>
	<%= label_tag("description:") %>
	<%= text_area_tag(:description) %>
	<%= label_tag("start date:") %>
	<%= datetime_local_field(:event, :start_date) %>
	<%= label_tag("duration:") %>
	<%= number_field(:event, :duration, step: 5) %>
	<%= label_tag("price:") %>
	<%= number_field(:event, :price) %>
	<%= label_tag("Location") %>
	<%= select_tag(:location, options_for_select(@locations.each{ |location| location })) %>
	<%= submit_tag("Create") %>
<% end %>
