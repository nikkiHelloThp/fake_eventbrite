<!--
Editing an existing event long-style:
form_with(model: @event, url: event_path(@event), method: "patch")
-->
<%= form_for @event, method: :patch do |f| %>
	<%= f.label("title:") %>
	<%= f.text_field(:title) %>
	<%= f.label("description:") %>
	<%= f.text_area(:description) %>
	<%= f.label("start date:") %>
	<%= f.datetime_local_field(:start_date) %>
	<%= f.label("duration:") %>
	<%= f.number_field(:duration, step: 5) %>
	<%= f.label("price:") %>
	<%= f.number_field(:price) %>
	<%= f.label("Location") %>
	<%= f.text_field(:location) %>
	<%= f.submit("Edit") %>
<% end %>
